{
  "compilerOptions": {
    "baseUrl": "src",
    "declaration": true,
    "declarationDir": "types",
    "declarationMap": true,
    "esModuleInterop": true,
    "outDir": "dist/esm",
    "sourceMap": true,
    "strict": true,
    "target": "ES5",
    "module": "ES2020",
    "moduleResolution": "node",
    "plugins": [
      {
        "transform": "@zerollup/ts-transform-paths",
        "exclude": ["*"]
      }
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/global.ts"
  ]
}
